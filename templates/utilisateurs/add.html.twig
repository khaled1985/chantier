   	 <div class="alert alert-success alert-dismissible">
   	 	<button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        {{ message }}
    </div>
   </div>
{% endfor %}



<div class="example-wrapper col-10">
    {{form_start(formUtilisateur)}}
    {{form_row(formUtilisateur.nom)}} 
    {{form_row(formUtilisateur.prenom)}} 
    {{form_row(formUtilisateur.matricule)}} 
    
  

      <button type="submit" class="btn btn-info" >Enregistrer</button>
 <a  href="{{path('crud')}}" class="btn btn-warning" >Retour</button></a>

    {{form_end(formUtilisateur)}}
  
</div>
{% endblock %}

